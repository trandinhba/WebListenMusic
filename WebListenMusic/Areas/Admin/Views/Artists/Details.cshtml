@model Artist
@{
    ViewData["Title"] = "Artist Details";
}

<div class="page-header">
    <div>
        <h1>Artist Details</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Artists</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-2"></i>Edit
        </a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
              onsubmit="return confirm('Are you sure you want to delete this artist?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-2"></i>Delete
            </button>
        </form>
    </div>
</div>

<!-- Artist Header -->
<div class="artist-profile-header mb-4" style="background-image: url('@(Model.ImageUrl ?? "/uploads/artists/default-artist.jpg")');">
    <div class="artist-profile-overlay">
        <div class="artist-profile-content">
            <img src="@(Model.ImageUrl ?? "/uploads/artists/default-artist.jpg")" 
                 alt="@Model.Name" 
                 class="artist-profile-avatar" />
            <div class="artist-profile-info">
                @if (Model.IsVerified)
                {
                    <span class="verified-label">
                        <i class="bi bi-patch-check-fill"></i> Verified Artist
                    </span>
                }
                <h1>@Model.Name</h1>
                <div class="artist-profile-stats">
                    <span><i class="bi bi-music-note-list me-1"></i>@(Model.Songs?.Count ?? 0) songs</span>
                    <span><i class="bi bi-disc me-1"></i>@(Model.Albums?.Count ?? 0) albums</span>
                    <span><i class="bi bi-play-circle me-1"></i>@(((int)ViewBag.TotalPlays).ToString("N0")) plays</span>
                    <span><i class="bi bi-heart me-1"></i>@(((int)ViewBag.TotalLikes).ToString("N0")) likes</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Country))
                {
                    <div class="artist-country mt-2">
                        <i class="bi bi-geo-alt me-1"></i>@Model.Country
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        @if (!string.IsNullOrEmpty(Model.Bio))
        {
            <div class="admin-card mb-4">
                <div class="admin-card-header">
                    <h3><i class="bi bi-person-lines-fill me-2"></i>Biography</h3>
                </div>
                <div class="admin-card-body">
                    <p class="artist-bio">@Html.Raw(Model.Bio.Replace("\n", "<br/>"))</p>
                </div>
            </div>
        }

        <!-- Top Songs -->
        <div class="admin-card mb-4">
            <div class="admin-card-header">
                <h3><i class="bi bi-trophy me-2"></i>Popular Songs</h3>
                <a asp-action="Create" asp-controller="Songs" asp-route-artistId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add Song
                </a>
            </div>
            <div class="admin-card-body p-0">
                @if (Model.Songs != null && Model.Songs.Any())
                {
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Song</th>
                                <th>Genre</th>
                                <th style="width: 100px;">Plays</th>
                                <th style="width: 100px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 0;
                            }
                            @foreach (var song in Model.Songs)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <div class="cell-title">
                                            <img src="@(song.CoverImageUrl ?? "/uploads/covers/default-song.jpg")" alt="@song.Title" />
                                            <div>
                                                <div class="title-text">@song.Title</div>
                                                <div class="subtitle-text">@TimeSpan.FromSeconds(song.Duration).ToString(@"m\:ss")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@(song.Genre?.Name ?? "-")</td>
                                    <td>@song.PlayCount.ToString("N0")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-controller="Songs" asp-route-id="@song.Id" 
                                               class="btn btn-icon btn-sm" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-controller="Songs" asp-route-id="@song.Id" 
                                               class="btn btn-icon btn-sm" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state text-center py-4">
                        <i class="bi bi-music-note-beamed" style="font-size: 2rem; color: var(--ml-text-muted);"></i>
                        <p class="mt-2 text-muted">No songs yet</p>
                    </div>
                }
            </div>
        </div>

        <!-- Albums -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h3><i class="bi bi-disc me-2"></i>Albums</h3>
                <a asp-action="Create" asp-controller="Albums" asp-route-artistId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add Album
                </a>
            </div>
            <div class="admin-card-body">
                @if (Model.Albums != null && Model.Albums.Any())
                {
                    <div class="albums-mini-grid">
                        @foreach (var album in Model.Albums)
                        {
                            <a asp-action="Details" asp-controller="Albums" asp-route-id="@album.Id" class="album-mini-card">
                                <img src="@(album.CoverImageUrl ?? "/uploads/albums/default-album.jpg")" alt="@album.Title" />
                                <div class="album-mini-info">
                                    <h5>@album.Title</h5>
                                    @if (album.ReleaseDate.HasValue)
                                    {
                                        <span>@album.ReleaseDate.Value.Year</span>
                                    }
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state text-center py-4">
                        <i class="bi bi-disc" style="font-size: 2rem; color: var(--ml-text-muted);"></i>
                        <p class="mt-2 text-muted">No albums yet</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <div class="admin-card mb-4">
            <div class="admin-card-header">
                <h3><i class="bi bi-gear me-2"></i>Status</h3>
            </div>
            <div class="admin-card-body">
                <ul class="detail-stats">
                    <li>
                        <span class="stat-label">Verification</span>
                        <span class="status-badge @(Model.IsVerified ? "verified" : "inactive")">
                            @if (Model.IsVerified)
                            {
                                <i class="bi bi-patch-check-fill me-1"></i>
                            }
                            @(Model.IsVerified ? "Verified" : "Not Verified")
                        </span>
                    </li>
                    <li>
                        <span class="stat-label">Followers</span>
                        <span class="stat-value">@Model.FollowersCount.ToString("N0")</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="admin-card">
            <div class="admin-card-header">
                <h3><i class="bi bi-clock-history me-2"></i>Information</h3>
            </div>
            <div class="admin-card-body">
                <ul class="detail-stats">
                    <li>
                        <span class="stat-label">Created Date</span>
                        <span class="stat-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                    </li>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <li>
                            <span class="stat-label">Updated</span>
                            <span class="stat-value">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    .artist-profile-header {
        height: 300px;
        border-radius: var(--ml-radius-lg);
        overflow: hidden;
        position: relative;
        background-size: cover;
        background-position: center;
    }
    
    .artist-profile-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.6) 100%);
        display: flex;
        align-items: center;
    }
    
    .artist-profile-content {
        display: flex;
        gap: 32px;
        padding: 32px;
        align-items: center;
    }
    
    .artist-profile-avatar {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid rgba(255,255,255,0.2);
    }
    
    .artist-profile-info h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 16px;
    }
    
    .artist-profile-stats {
        display: flex;
        gap: 24px;
        color: var(--ml-text-muted);
    }
    
    .verified-label {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        color: var(--ml-primary);
        font-size: 0.875rem;
        margin-bottom: 8px;
    }
    
    .artist-country {
        color: var(--ml-text-muted);
        font-size: 0.9rem;
    }
    
    .albums-mini-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 16px;
    }
    
    .album-mini-card {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: var(--ml-transition);
    }
    
    .album-mini-card:hover {
        transform: translateY(-4px);
    }
    
    .album-mini-card img {
        width: 100%;
        aspect-ratio: 1;
        object-fit: cover;
        border-radius: var(--ml-radius);
        margin-bottom: 8px;
    }
    
    .album-mini-info h5 {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 4px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .album-mini-info span {
        font-size: 0.8rem;
        color: var(--ml-text-muted);
    }
    
    .detail-stats {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .detail-stats li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid var(--ml-border);
    }
    
    .detail-stats li:last-child {
        border-bottom: none;
    }
    
    .stat-label {
        color: var(--ml-text-muted);
    }
    
    .stat-value {
        font-weight: 500;
    }
    
    .status-badge {
        padding: 4px 12px;
        border-radius: var(--ml-radius-full);
        font-size: 0.8125rem;
        font-weight: 500;
    }
    
    .status-badge.active, .status-badge.verified {
        background: rgba(34, 197, 94, 0.15);
        color: #22c55e;
    }
    
    .status-badge.inactive {
        background: rgba(239, 68, 68, 0.15);
        color: #ef4444;
    }
</style>
