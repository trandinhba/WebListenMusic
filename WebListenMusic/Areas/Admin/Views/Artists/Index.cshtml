@model IEnumerable<AdminArtistListItemViewModel>
@{
    ViewData["Title"] = "Artist Management";
}

<div class="page-header">
    <div>
        <h1>Artist Management</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Artists</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Add Artist
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="admin-card mb-4">
    <div class="admin-card-header">
        <h3><i class="bi bi-person-badge me-2"></i>Artist List (@ViewBag.TotalItems)</h3>
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <div class="input-group" style="width: 300px;">
                <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewBag.Search" />
                <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            <select name="isVerified" class="form-select" style="width: 150px;" onchange="this.form.submit()">
                <option value="">-- All --</option>
                <option value="true" selected="@(ViewBag.IsVerified == true)">Verified</option>
                <option value="false" selected="@(ViewBag.IsVerified == false)">Not Verified</option>
            </select>
            @if (!string.IsNullOrEmpty(ViewBag.Search as string) || ViewBag.IsVerified != null)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </form>
    </div>
    <div class="admin-card-body">
        @if (!Model.Any())
        {
            <div class="empty-state text-center py-5">
                <i class="bi bi-person-badge" style="font-size: 3rem; color: var(--ml-text-muted);"></i>
                <h5 class="mt-3">No artists yet</h5>
                <p class="text-muted">Start by adding the first artist</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-lg me-2"></i>Add Artist
                </a>
            </div>
        }
        else
        {
            <div class="artists-grid">
                @foreach (var artist in Model)
                {
                    <div class="artist-card-admin">
                        <div class="artist-cover">
                            <img src="@(artist.ImageUrl ?? "/uploads/artists/default-artist.jpg")" alt="@artist.Name" />
                            <div class="artist-overlay">
                                <a asp-action="Details" asp-route-id="@artist.Id" class="btn btn-icon" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@artist.Id" class="btn btn-icon" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@artist.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this artist?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-icon text-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                            @if (artist.IsVerified)
                            {
                                <div class="artist-badge verified">
                                    <i class="bi bi-patch-check-fill"></i>
                                </div>
                            }
                        </div>
                        <div class="artist-info">
                            <h4 class="artist-name">@artist.Name</h4>
                            <div class="artist-meta">
                                <span><i class="bi bi-music-note-list me-1"></i>@artist.SongCount songs</span>
                                <span><i class="bi bi-disc me-1"></i>@artist.AlbumCount albums</span>
                            </div>
                            <div class="artist-stats">
                                <span><i class="bi bi-play-circle me-1"></i>@artist.TotalPlays.ToString("N0") plays</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="admin-card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-search="@ViewBag.Search"
                           asp-route-isVerified="@ViewBag.IsVerified">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-search="@ViewBag.Search"
                               asp-route-isVerified="@ViewBag.IsVerified">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-search="@ViewBag.Search"
                           asp-route-isVerified="@ViewBag.IsVerified">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .artists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 24px;
    }
    
    .artist-card-admin {
        background: var(--ml-surface);
        border: 1px solid var(--ml-border);
        border-radius: var(--ml-radius-lg);
        overflow: hidden;
        transition: var(--ml-transition);
    }
    
    .artist-card-admin:hover {
        border-color: var(--ml-border-light);
        transform: translateY(-4px);
        box-shadow: var(--ml-shadow-lg);
    }
    
    .artist-cover {
        position: relative;
        aspect-ratio: 1;
    }
    
    .artist-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .artist-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        opacity: 0;
        transition: var(--ml-transition);
    }
    
    .artist-card-admin:hover .artist-overlay {
        opacity: 1;
    }
    
    .artist-overlay .btn-icon {
        width: 40px;
        height: 40px;
        background: var(--ml-surface);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--ml-text);
        transition: var(--ml-transition);
    }
    
    .artist-overlay .btn-icon:hover {
        background: var(--ml-primary);
        color: white;
    }
    
    .artist-badge.verified {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 28px;
        height: 28px;
        background: var(--ml-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.875rem;
    }
    
    .artist-info {
        padding: 16px;
    }
    
    .artist-name {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .artist-meta {
        display: flex;
        gap: 16px;
        font-size: 0.8125rem;
        color: var(--ml-text-muted);
        margin-bottom: 8px;
    }
    
    .artist-stats {
        font-size: 0.8125rem;
        color: var(--ml-text-dark);
    }
</style>
