@model WebListenMusic.Models.ApplicationUser
@{
    ViewData["Title"] = "User Details";
}

<div class="page-header">
    <div>
        <h1>User Details</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Users</a></li>
                <li class="breadcrumb-item active">@Model.DisplayName</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil me-2"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back
        </a>
    </div>
</div>

<div class="row">
    <!-- User Profile Card -->
    <div class="col-lg-4 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-body text-center">
                <div class="user-avatar mb-4">
                    <img src="@(Model.AvatarUrl ?? "/uploads/avatars/default-avatar.jpg")" alt="@Model.DisplayName"
                         class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
                </div>
                <h3 class="mb-1">@Model.DisplayName</h3>
                <p class="text-muted mb-3">@Model.Email</p>
                
                <div class="status-badges mb-4 d-flex justify-content-center gap-2 flex-wrap">
                    @if (Model.IsPremium)
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-star-fill me-1"></i>Premium
                        </span>
                    }
                    <span class="status-badge @(Model.IsActive ? "active" : "inactive")">
                        @(Model.IsActive ? "Active" : "Locked")
                    </span>
                    @if (Model.EmailConfirmed)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle me-1"></i>Verified
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="bi bi-x-circle me-1"></i>Not Verified
                        </span>
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.Bio))
                {
                    <div class="user-bio p-3 rounded text-start" style="background: var(--ml-bg-secondary);">
                        <small class="text-muted">Bio:</small>
                        <p class="mb-0">@Model.Bio</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Stats & Details -->
    <div class="col-lg-8">
        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="admin-card">
                    <div class="admin-card-body text-center">
                        <div class="stat-icon mb-2">
                            <i class="bi bi-collection-play-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="mb-0">@(Model.Playlists?.Count ?? 0)</h2>
                        <p class="text-muted mb-0">Playlists</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="admin-card">
                    <div class="admin-card-body text-center">
                        <div class="stat-icon mb-2">
                            <i class="bi bi-flag-fill text-warning" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="mb-0">@(Model.Reports?.Count ?? 0)</h2>
                        <p class="text-muted mb-0">Reports</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="admin-card">
                    <div class="admin-card-body text-center">
                        <div class="stat-icon mb-2">
                            @if (Model.IsPremium)
                            {
                                <i class="bi bi-gem text-warning" style="font-size: 2rem;"></i>
                            }
                            else
                            {
                                <i class="bi bi-person-fill text-info" style="font-size: 2rem;"></i>
                            }
                        </div>
                        <h2 class="mb-0">@(Model.IsPremium ? "Premium" : "Free")</h2>
                        <p class="text-muted mb-0">Account Type</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Card -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h3><i class="bi bi-info-circle me-2"></i>Detailed Information</h3>
            </div>
            <div class="admin-card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th style="width: 180px;">ID:</th>
                            <td><code>@Model.Id</code></td>
                        </tr>
                        <tr>
                            <th>Display Name:</th>
                            <td>@Model.DisplayName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>
                                @Model.Email
                                @if (Model.EmailConfirmed)
                                {
                                    <i class="bi bi-patch-check-fill text-success ms-1" title="Verified"></i>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Username:</th>
                            <td>@Model.UserName</td>
                        </tr>
                        <tr>
                            <th>Phone:</th>
                            <td>@(Model.PhoneNumber ?? "Not updated")</td>
                        </tr>
                        <tr>
                            <th>Country:</th>
                            <td>@(Model.Country ?? "Not updated")</td>
                        </tr>
                        <tr>
                            <th>Gender:</th>
                            <td>@(Model.Gender ?? "Not updated")</td>
                        </tr>
                        @if (Model.DateOfBirth.HasValue)
                        {
                            <tr>
                                <th>Date of Birth:</th>
                                <td>@Model.DateOfBirth.Value.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                        <tr>
                            <th>Premium:</th>
                            <td>
                                @if (Model.IsPremium)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-star-fill me-1"></i>Premium
                                    </span>
                                    @if (Model.PremiumExpiryDate.HasValue)
                                    {
                                        <small class="text-muted ms-2">Expires: @Model.PremiumExpiryDate.Value.ToString("dd/MM/yyyy")</small>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Free</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Account Status:</th>
                            <td>
                                <span class="status-badge @(Model.IsActive ? "active" : "inactive")">
                                    @(Model.IsActive ? "Active" : "Locked")
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Registration Date:</th>
                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        @if (Model.LastLoginAt.HasValue)
                        {
                            <tr>
                                <th>Last Login:</th>
                                <td>@Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        }
                        <tr>
                            <th>Roles:</th>
                            <td>
                                @if (ViewBag.UserRoles != null && ((IList<string>)ViewBag.UserRoles).Any())
                                {
                                    foreach (var role in (IList<string>)ViewBag.UserRoles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Recent Playlists -->
<div class="row mt-4">
    <div class="col-12 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h3><i class="bi bi-collection-play me-2"></i>Recent Playlists</h3>
            </div>
            <div class="admin-card-body p-0">
                @if (Model.Playlists != null && Model.Playlists.Any())
                {
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Playlist Name</th>
                                <th>Song Count</th>
                                <th>Visibility</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var playlist in Model.Playlists.OrderByDescending(p => p.CreatedAt).Take(5))
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-music-note-list me-2"></i>
                                        @playlist.Name
                                    </td>
                                    <td>@(playlist.PlaylistSongs?.Count ?? 0)</td>
                                    <td>
                                        <span class="status-badge @(playlist.IsPublic ? "active" : "inactive")">
                                            @(playlist.IsPublic ? "Public" : "Private")
                                        </span>
                                    </td>
                                    <td>@playlist.CreatedAt.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-collection" style="font-size: 2rem;"></i>
                        <p class="mb-0 mt-2">No playlists yet</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="admin-card mt-4">
    <div class="admin-card-header">
        <h3><i class="bi bi-gear me-2"></i>Actions</h3>
    </div>
    <div class="admin-card-body">
        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <form asp-action="TogglePremium" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn @(Model.IsPremium ? "btn-secondary" : "btn-warning")">
                    <i class="bi @(Model.IsPremium ? "bi-star" : "bi-star-fill") me-2"></i>
                    @(Model.IsPremium ? "Cancel Premium" : "Upgrade to Premium")
                </button>
            </form>
            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn @(Model.IsActive ? "btn-danger" : "btn-success")">
                    <i class="bi @(Model.IsActive ? "bi-lock" : "bi-unlock") me-2"></i>
                    @(Model.IsActive ? "Lock Account" : "Unlock")
                </button>
            </form>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone!');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-2"></i>Delete User
                </button>
            </form>
        </div>
    </div>
</div>
