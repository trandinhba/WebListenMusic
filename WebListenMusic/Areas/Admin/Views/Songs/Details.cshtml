@model WebListenMusic.Models.Song
@{
    ViewData["Title"] = "Song Details";
}

<div class="page-header">
    <div>
        <h1>Song Details</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Songs</a></li>
                <li class="breadcrumb-item active">@Model.Title</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil me-2"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back
        </a>
    </div>
</div>

<div class="row">
    <!-- Song Info Card -->
    <div class="col-lg-4 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-body text-center">
                <div class="song-cover mb-4">
                    <img src="@(Model.CoverImageUrl ?? "/uploads/covers/default-song.jpg")" alt="@Model.Title"
                         class="rounded shadow" style="max-width: 100%; height: auto; max-height: 300px;" />
                </div>
                <h3 class="mb-2">@Model.Title</h3>
                <p class="text-muted mb-3">
                    @if (Model.Artist != null)
                    {
                        <a asp-action="Details" asp-controller="Artists" asp-route-id="@Model.ArtistId">@Model.Artist.Name</a>
                    }
                    else
                    {
                        <span>Unknown</span>
                    }
                </p>
                
                <div class="status-container mb-4">
                    <span class="status-badge @(Model.IsPublished ? "active" : "inactive")">
                        @(Model.IsPublished ? "Active" : "Inactive")
                    </span>
                </div>

                @if (!string.IsNullOrEmpty(Model.AudioUrl))
                {
                    <div class="audio-player mb-3">
                        <audio controls class="w-100">
                            <source src="@Model.AudioUrl" type="audio/mpeg">
                            Your browser does not support audio playback.
                        </audio>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Stats & Details Card -->
    <div class="col-lg-8">
        <div class="row">
            <!-- Stats Cards -->
            <div class="col-md-4 mb-4">
                <div class="admin-card">
                    <div class="admin-card-body text-center">
                        <div class="stat-icon mb-2">
                            <i class="bi bi-play-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="mb-0">@Model.PlayCount.ToString("N0")</h2>
                        <p class="text-muted mb-0">Plays</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="admin-card">
                    <div class="admin-card-body text-center">
                        <div class="stat-icon mb-2">
                            <i class="bi bi-heart-fill text-danger" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="mb-0">@Model.LikeCount.ToString("N0")</h2>
                        <p class="text-muted mb-0">Likes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="admin-card">
                    <div class="admin-card-body text-center">
                        <div class="stat-icon mb-2">
                            <i class="bi bi-clock-fill text-info" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="mb-0">@TimeSpan.FromSeconds(Model.Duration).ToString(@"m\:ss")</h2>
                        <p class="text-muted mb-0">Duration</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Card -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h3><i class="bi bi-info-circle me-2"></i>Detailed Information</h3>
            </div>
            <div class="admin-card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th style="width: 150px;">ID:</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Song Title:</th>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <th>Artist:</th>
                            <td>
                                @if (Model.Artist != null)
                                {
                                    <a asp-action="Details" asp-controller="Artists" asp-route-id="@Model.ArtistId">@Model.Artist.Name</a>
                                }
                                else
                                {
                                    <span class="text-muted">Unknown</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Album:</th>
                            <td>
                                @if (Model.Album != null)
                                {
                                    <a asp-action="Details" asp-controller="Albums" asp-route-id="@Model.AlbumId">@Model.Album.Title</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not in album</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Genre:</th>
                            <td>
                                @if (Model.Genre != null)
                                {
                                    <span class="badge bg-primary">@Model.Genre.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">Unknown</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                <span class="status-badge @(Model.IsPublished ? "active" : "inactive")">
                                    @(Model.IsPublished ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Created Date:</th>
                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Lyrics))
                        {
                            <tr>
                                <th>Lyrics:</th>
                                <td>
                                    <div class="lyrics-preview p-3 rounded" style="background: var(--ml-bg-secondary); max-height: 200px; overflow-y: auto; white-space: pre-line;">
                                        @Model.Lyrics
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="admin-card mt-4">
    <div class="admin-card-header">
        <h3><i class="bi bi-gear me-2"></i>Actions</h3>
    </div>
    <div class="admin-card-body">
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn @(Model.IsPublished ? "btn-secondary" : "btn-success")">
                    <i class="bi @(Model.IsPublished ? "bi-eye-slash" : "bi-eye") me-2"></i>
                    @(Model.IsPublished ? "Deactivate" : "Activate")
                </button>
            </form>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this song? This action cannot be undone!');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Song
                </button>
            </form>
        </div>
    </div>
</div>
