@model Genre
@{
    ViewData["Title"] = "Edit Genre";
}

<div class="page-header">
    <div>
        <h1>@ViewData["Title"]</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Genres</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit: @Model.Name</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Genre Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Pop, Rock, Jazz..." />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description about the genre..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Color" class="form-label">Display Color</label>
                        <div class="input-group">
                            <input asp-for="Color" type="color" class="form-control form-control-color" />
                            <input type="text" id="colorHex" class="form-control" value="@Model.Color" readonly />
                        </div>
                        <small class="text-muted">Color will be used to display genre tags</small>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Preview</h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">Genre tag will display as follows:</p>
                <div class="d-flex gap-2 flex-wrap">
                    <span class="badge" id="previewBadge" style="background-color: @(Model.Color ?? "#1f6feb"); font-size: 0.875rem; padding: 6px 12px;">
                        @Model.Name
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('Name').addEventListener('input', function() {
            document.getElementById('previewBadge').textContent = this.value || 'Genre Name';
        });
        
        document.getElementById('Color').addEventListener('input', function() {
            document.getElementById('colorHex').value = this.value;
            document.getElementById('previewBadge').style.backgroundColor = this.value;
        });
    </script>
}
