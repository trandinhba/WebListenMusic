@model Genre
@{
    ViewData["Title"] = "Genre Details";
}

<div class="page-header">
    <div>
        <h1>@ViewData["Title"]</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Genres</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-2"></i>Edit
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Genre Information</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <span class="badge" style="background-color: @(Model.Color ?? "#1f6feb"); font-size: 1.5rem; padding: 12px 24px;">
                        @Model.Name
                    </span>
                </div>
                
                <dl class="row mb-0">
                    <dt class="col-5">ID:</dt>
                    <dd class="col-7">#@Model.Id</dd>
                    
                    <dt class="col-5">Color:</dt>
                    <dd class="col-7">
                        <code style="background-color: @(Model.Color ?? "#1f6feb"); color: white; padding: 2px 8px; border-radius: 4px;">
                            @(Model.Color ?? "#1f6feb")
                        </code>
                    </dd>
                    
                    <dt class="col-5">Song Count:</dt>
                    <dd class="col-7"><span class="badge bg-secondary">@Model.Songs.Count</span></dd>
                    
                    <dt class="col-5">Created Date:</dt>
                    <dd class="col-7">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr />
                    <h6 class="text-muted">Description</h6>
                    <p>@Model.Description</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-music-note-list me-2"></i>Songs in Genre (@Model.Songs.Count)</h5>
            </div>
            @if (Model.Songs.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Song</th>
                                <th>Artist</th>
                                <th class="text-center">Plays</th>
                                <th style="width: 80px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 0;
                            }
                            @foreach (var song in Model.Songs.Take(20))
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <img src="@(song.CoverImageUrl ?? "/uploads/covers/default-song.jpg")" 
                                                 alt="@song.Title" 
                                                 class="rounded" 
                                                 style="width: 40px; height: 40px; object-fit: cover;" />
                                            <div>
                                                <div class="fw-medium">@song.Title</div>
                                                @if (song.IsFeatured)
                                                {
                                                    <span class="badge bg-warning text-dark badge-sm">Featured</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>@(song.Artist?.Name ?? "Unknown")</td>
                                    <td class="text-center">@song.PlayCount.ToString("N0")</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Songs" asp-action="Details" asp-route-id="@song.Id" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (Model.Songs.Count > 20)
                {
                    <div class="card-footer text-center">
                        <a asp-area="Admin" asp-controller="Songs" asp-action="Index" asp-route-genreId="@Model.Id" class="btn btn-outline-primary btn-sm">
                            View all @Model.Songs.Count songs <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="card-body text-center py-5">
                    <i class="bi bi-music-note text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">No songs in this genre yet.</p>
                </div>
            }
        </div>
    </div>
</div>
