@model Genre
@{
    ViewData["Title"] = "Delete Genre";
}

<div class="page-header">
    <div>
        <h1>@ViewData["Title"]</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Genres</a></li>
                <li class="breadcrumb-item active">Delete</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <span class="badge" style="background-color: @(Model.Color ?? "#1f6feb"); font-size: 1.25rem; padding: 10px 20px;">
                        @Model.Name
                    </span>
                </div>
                
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone!
                </div>
                
                @if (Model.Songs.Any())
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle me-2"></i>
                        <strong>Cannot delete!</strong> This genre has <strong>@Model.Songs.Count</strong> songs. 
                        Please delete or move songs to another genre before deleting.
                    </div>
                    
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">
                        Are you sure you want to delete genre <strong>@Model.Name</strong>?
                    </p>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
