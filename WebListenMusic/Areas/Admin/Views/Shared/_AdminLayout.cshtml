<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | MusicListen</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-container">
        <!-- Admin Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo">
                    <i class="bi bi-music-note-beamed"></i>
                    <span>MusicListen</span>
                </a>
                <span class="badge badge-primary ms-2">Admin</span>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Overview</div>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Content Management</div>
                    <a asp-area="Admin" asp-controller="Songs" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Songs" ? "active" : "")">
                        <i class="bi bi-music-note-list"></i>
                        <span>Songs</span>
                    </a>
                    <a asp-area="Admin" asp-controller="Albums" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Albums" ? "active" : "")">
                        <i class="bi bi-disc-fill"></i>
                        <span>Albums</span>
                    </a>
                    <a asp-area="Admin" asp-controller="Artists" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Artists" ? "active" : "")">
                        <i class="bi bi-person-fill"></i>
                        <span>Artists</span>
                    </a>
                    <a asp-area="Admin" asp-controller="Genres" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Genres" ? "active" : "")">
                        <i class="bi bi-tags-fill"></i>
                        <span>Genres</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">System Management</div>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                        <i class="bi bi-people-fill"></i>
                        <span>Users</span>
                    </a>
                    <a asp-area="Admin" asp-controller="Reports" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                        <i class="bi bi-flag-fill"></i>
                        <span>Reports</span>
                        @{
                            var pendingCount = ViewBag.PendingReportsCount ?? 0;
                            if ((int)pendingCount > 0)
                            {
                                <span class="badge badge-danger">@pendingCount</span>
                            }
                        }
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Other</div>
                    <a asp-controller="Home" asp-action="Index" asp-area="" class="nav-item">
                        <i class="bi bi-box-arrow-left"></i>
                        <span>Back to Home</span>
                    </a>
                </div>
            </nav>
            
            <div class="sidebar-footer">
                <div class="user-menu">
                    <img src="@(User.FindFirst("AvatarUrl")?.Value ?? "/uploads/avatars/default.jpg")" alt="Avatar" class="user-avatar" />
                    <div class="user-info">
                        <div class="user-name">@(User.FindFirst("DisplayName")?.Value ?? User.Identity?.Name)</div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Header -->
            <header class="admin-header">
                <button class="btn btn-icon mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="bi bi-list"></i>
                </button>
                
                <div class="header-search">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" class="form-control" placeholder="Search..." />
                    </div>
                </div>
                
                <div class="header-actions">
                    <button class="btn btn-icon" title="Notifications">
                        <i class="bi bi-bell"></i>
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-icon" data-bs-toggle="dropdown">
                            <i class="bi bi-gear"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index" asp-area=""><i class="bi bi-person me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" asp-area="" method="post">
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="admin-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @RenderBody()
            </main>
        </div>
    </div>
    
    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
