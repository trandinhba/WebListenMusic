@model IEnumerable<AdminAlbumListItemViewModel>
@{
    ViewData["Title"] = "Album Management";
}

<div class="page-header">
    <div>
        <h1>Album Management</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Albums</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Add Album
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="admin-card mb-4">
    <div class="admin-card-header">
        <h3><i class="bi bi-disc me-2"></i>Album List (@ViewBag.TotalItems)</h3>
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <div class="input-group" style="width: 250px;">
                <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewBag.Search" />
                <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            <select name="artistId" class="form-select" style="width: 180px;" onchange="this.form.submit()">
                <option value="">-- Artist --</option>
                @foreach (SelectListItem item in ViewBag.Artists)
                {
                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                }
            </select>
            @if (!string.IsNullOrEmpty(ViewBag.Search as string) || ViewBag.ArtistId != null)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </form>
    </div>
    <div class="admin-card-body">
        @if (!Model.Any())
        {
            <div class="empty-state text-center py-5">
                <i class="bi bi-disc" style="font-size: 3rem; color: var(--ml-text-muted);"></i>
                <h5 class="mt-3">No albums yet</h5>
                <p class="text-muted">Start by adding the first album</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-lg me-2"></i>Add Album
                </a>
            </div>
        }
        else
        {
            <div class="albums-grid">
                @foreach (var album in Model)
                {
                    <div class="album-card-admin">
                        <div class="album-cover">
                            <img src="@(album.CoverImageUrl ?? "/uploads/albums/default-album.jpg")" alt="@album.Title" />
                            <div class="album-overlay">
                                <a asp-action="Details" asp-route-id="@album.Id" class="btn btn-icon" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@album.Id" class="btn btn-icon" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@album.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this album?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-icon text-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="album-badge @(album.IsPublished ? "active" : "inactive")">
                                @(album.IsPublished ? "Active" : "Inactive")
                            </div>
                        </div>
                        <div class="album-info">
                            <h4 class="album-title">@album.Title</h4>
                            <p class="album-artist">@(album.ArtistName ?? "Unknown")</p>
                            <div class="album-meta">
                                <span><i class="bi bi-music-note-list me-1"></i>@album.SongCount songs</span>
                                @if (album.ReleaseDate.HasValue)
                                {
                                    <span><i class="bi bi-calendar me-1"></i>@album.ReleaseDate.Value.Year</span>
                                }
                            </div>
                            <div class="album-stats">
                                <span><i class="bi bi-play-circle me-1"></i>@album.TotalPlays.ToString("N0") plays</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="admin-card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-search="@ViewBag.Search"
                           asp-route-artistId="@ViewBag.ArtistId">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-search="@ViewBag.Search"
                               asp-route-artistId="@ViewBag.ArtistId">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-search="@ViewBag.Search"
                           asp-route-artistId="@ViewBag.ArtistId">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .albums-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 24px;
    }
    
    .album-card-admin {
        background: var(--ml-surface);
        border: 1px solid var(--ml-border);
        border-radius: var(--ml-radius-lg);
        overflow: hidden;
        transition: var(--ml-transition);
    }
    
    .album-card-admin:hover {
        border-color: var(--ml-border-light);
        transform: translateY(-4px);
        box-shadow: var(--ml-shadow-lg);
    }
    
    .album-cover {
        position: relative;
        aspect-ratio: 1;
    }
    
    .album-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .album-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        opacity: 0;
        transition: var(--ml-transition);
    }
    
    .album-card-admin:hover .album-overlay {
        opacity: 1;
    }
    
    .album-overlay .btn-icon {
        width: 40px;
        height: 40px;
        background: var(--ml-surface);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--ml-text);
        transition: var(--ml-transition);
    }
    
    .album-overlay .btn-icon:hover {
        background: var(--ml-primary);
        color: white;
    }
    
    .album-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 4px 12px;
        border-radius: var(--ml-radius-full);
        font-size: 0.75rem;
        font-weight: 500;
    }
    
    .album-badge.active {
        background: rgba(34, 197, 94, 0.9);
        color: white;
    }
    
    .album-badge.inactive {
        background: rgba(239, 68, 68, 0.9);
        color: white;
    }
    
    .album-info {
        padding: 16px;
    }
    
    .album-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 4px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .album-artist {
        font-size: 0.875rem;
        color: var(--ml-text-muted);
        margin-bottom: 12px;
    }
    
    .album-meta {
        display: flex;
        gap: 16px;
        font-size: 0.8125rem;
        color: var(--ml-text-muted);
        margin-bottom: 8px;
    }
    
    .album-stats {
        font-size: 0.8125rem;
        color: var(--ml-text-dark);
    }
</style>
