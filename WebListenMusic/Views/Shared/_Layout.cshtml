<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicListen</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo">
                    <i class="bi bi-music-note-beamed"></i>
                    <span>MusicListen</span>
                </a>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Menu</div>
                    <a asp-controller="Home" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-house-fill"></i>
                        <span>Home</span>
                    </a>
                    <a asp-controller="Search" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Search" ? "active" : "")">
                        <i class="bi bi-search"></i>
                        <span>Search</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Library</div>
                    <a asp-controller="Songs" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Songs" ? "active" : "")">
                        <i class="bi bi-music-note-list"></i>
                        <span>Songs</span>
                    </a>
                    <a asp-controller="Albums" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Albums" ? "active" : "")">
                        <i class="bi bi-disc-fill"></i>
                        <span>Albums</span>
                    </a>
                    <a asp-controller="Artists" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Artists" ? "active" : "")">
                        <i class="bi bi-person-fill"></i>
                        <span>Artists</span>
                    </a>
                    <a asp-controller="Playlists" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Playlists" ? "active" : "")">
                        <i class="bi bi-collection-play-fill"></i>
                        <span>Playlists</span>
                    </a>
                </div>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="nav-section">
                        <div class="nav-section-title">Personal</div>
                        <a asp-controller="Profile" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
                            <i class="bi bi-person-circle"></i>
                            <span>Profile</span>
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-item">
                                <i class="bi bi-shield-fill-check"></i>
                                <span>Admin</span>
                            </a>
                        }
                    </div>
                }
            </nav>
            
            <div class="sidebar-footer">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="dropdown">
                        <div class="user-menu" data-bs-toggle="dropdown">
                            <img src="@(User.FindFirst("AvatarUrl")?.Value ?? "/images/default-avatar.svg")" alt="Avatar" class="user-avatar" onerror="this.src='/images/default-avatar.svg';" />
                            <div class="user-info">
                                <div class="user-name">@(User.FindFirst("DisplayName")?.Value ?? User.Identity?.Name)</div>
                                <div class="user-role">@(User.IsInRole("Admin") ? "Admin" : "User")</div>
                            </div>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="bi bi-person"></i> Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Edit"><i class="bi bi-pencil"></i> Edit Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Settings"><i class="bi bi-gear"></i> Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right"></i> Sign Out</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline">Sign Up</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Sign In</a>
                    </div>
                }
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="main-content" id="mainContent">
            @RenderBody()
        </main>
        
        <!-- Music Player -->
        @await Html.PartialAsync("_Player")
    </div>
    
    <!-- Add to Playlist Modal -->
    @await Html.PartialAsync("_AddToPlaylistModal")
    
    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/player.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
