@* Add to Playlist Modal *@

<div class="modal fade" id="addToPlaylistModal" tabindex="-1" aria-labelledby="addToPlaylistModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addToPlaylistModalLabel">Add to Playlist</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Hidden song id -->
                <input type="hidden" id="modalSongId" value="" />
                
                <!-- Create new playlist -->
                <div class="mb-4">
                    <button class="btn btn-outline-primary w-100" id="btnCreateNewPlaylist">
                        <i class="bi bi-plus-lg me-2"></i>Create new playlist
                    </button>
                </div>
                
                <!-- New playlist form (hidden by default) -->
                <div id="newPlaylistForm" class="mb-4" style="display: none;">
                    <div class="form-group">
                        <label class="form-label">Playlist name</label>
                        <input type="text" class="form-control" id="newPlaylistName" placeholder="Enter playlist name..." />
                    </div>
                    <div class="d-flex gap-2 mt-3">
                        <button class="btn btn-secondary flex-fill" id="btnCancelNewPlaylist">Cancel</button>
                        <button class="btn btn-primary flex-fill" id="btnSaveNewPlaylist">Create</button>
                    </div>
                </div>
                
                <hr class="my-3" />
                
                <!-- Playlist list -->
                <div class="playlist-select-list" id="playlistSelectList">
                    <p class="text-muted text-center">Loading playlists...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .playlist-select-item {
        display: flex;
        align-items: center;
        width: 100%;
        padding: 12px 16px;
        border: none;
        background: var(--ml-surface-hover);
        border-radius: var(--ml-radius);
        margin-bottom: 8px;
        cursor: pointer;
        transition: var(--ml-transition);
        text-align: left;
        color: var(--ml-text);
    }
    
    .playlist-select-item:hover {
        background: var(--ml-primary);
        color: white;
    }
    
    .playlist-select-list {
        max-height: 300px;
        overflow-y: auto;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnCreateNew = document.getElementById('btnCreateNewPlaylist');
    const newPlaylistForm = document.getElementById('newPlaylistForm');
    const btnCancel = document.getElementById('btnCancelNewPlaylist');
    const btnSave = document.getElementById('btnSaveNewPlaylist');
    const nameInput = document.getElementById('newPlaylistName');
    
    // Show form
    btnCreateNew?.addEventListener('click', function() {
        btnCreateNew.style.display = 'none';
        newPlaylistForm.style.display = 'block';
        nameInput?.focus();
    });
    
    // Cancel
    btnCancel?.addEventListener('click', function() {
        newPlaylistForm.style.display = 'none';
        btnCreateNew.style.display = 'block';
        nameInput.value = '';
    });
    
    // Save new playlist
    btnSave?.addEventListener('click', async function() {
        const name = nameInput?.value?.trim();
        if (!name) {
            showToast('Please enter playlist name', 'warning');
            return;
        }
        
        try {
            const response = await fetch('/Playlists/CreateQuick', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name: name })
            });
            
            if (response.ok) {
                const result = await response.json();
                if (result.success) {
                    showToast('Playlist created!', 'success');
                    // Refresh playlist list
                    const songId = document.getElementById('modalSongId')?.value;
                    if (songId) loadUserPlaylists(parseInt(songId));
                    // Reset form
                    newPlaylistForm.style.display = 'none';
                    btnCreateNew.style.display = 'block';
                    nameInput.value = '';
                } else {
                    showToast(result.message || 'Error creating playlist', 'error');
                }
            } else {
                showToast('Please login to create playlist', 'warning');
            }
        } catch (err) {
            showToast('Error creating playlist', 'error');
        }
    });
    
    // Enter key to save
    nameInput?.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            btnSave?.click();
        }
    });
});
</script>
