@model Playlist
@{
    ViewData["Title"] = "Create Playlist";
}

<div class="form-page">
    <div class="form-container">
        <h1>Create New Playlist</h1>
        
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            
            <div class="mb-4">
                <label asp-for="Name" class="form-label">Playlist name *</label>
                <input asp-for="Name" class="form-control" placeholder="Enter playlist name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your playlist..."></textarea>
            </div>
            
            <div class="mb-4">
                <div class="form-check">
                    <input asp-for="IsPublic" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsPublic" class="form-check-label">
                        Public - Everyone can see this playlist
                    </label>
                </div>
            </div>
            
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Create Playlist
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-page {
        display: flex;
        justify-content: center;
        padding: 40px 0;
    }
    
    .form-container {
        width: 100%;
        max-width: 500px;
        background: var(--ml-surface);
        border-radius: var(--ml-radius-lg);
        padding: 32px;
    }
    
    .form-container h1 {
        font-size: 1.5rem;
        margin-bottom: 24px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
