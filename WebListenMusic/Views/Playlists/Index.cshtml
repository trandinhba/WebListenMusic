@model PlaylistsViewModel
@{
    ViewData["Title"] = "Playlist";
}

<div class="page-header-customer">
    <div>
        <h1>Playlist</h1>
        <p class="text-muted">@Model.TotalItems playlist</p>
    </div>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Create Playlist
        </a>
    }
</div>

<!-- Filters -->
<div class="filters-bar">
    <form method="get" class="filters-form">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" name="search" value="@Model.Search" placeholder="Search playlists..." class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i>
        </button>
        
        @if (!string.IsNullOrEmpty(Model.Search))
        {
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-lg"></i> Clear
            </a>
        }
    </form>
</div>

<!-- Playlists Grid -->
@if (Model.Playlists.Any())
{
    <div class="playlists-grid">
        @foreach (var playlist in Model.Playlists)
        {
            var firstSongCover = playlist.PlaylistSongs?.FirstOrDefault()?.Song?.CoverImageUrl;
            <a asp-action="Details" asp-route-id="@playlist.Id" class="playlist-card">
                <div class="playlist-cover">
                    @if (!string.IsNullOrEmpty(playlist.CoverImageUrl))
                    {
                        <img src="@playlist.CoverImageUrl" alt="@playlist.Name" loading="lazy" />
                    }
                    else if (!string.IsNullOrEmpty(firstSongCover))
                    {
                        <img src="@firstSongCover" alt="@playlist.Name" loading="lazy" />
                    }
                    else
                    {
                        <div class="playlist-cover-default">
                            <i class="bi bi-music-note-list"></i>
                        </div>
                    }
                    <div class="playlist-overlay">
                        <button class="play-btn" onclick="event.preventDefault(); playPlaylist(@playlist.Id);">
                            <i class="bi bi-play-fill"></i>
                        </button>
                    </div>
                    @if (!playlist.IsPublic)
                    {
                        <span class="playlist-badge private">
                            <i class="bi bi-lock-fill"></i>
                        </span>
                    }
                </div>
                <div class="playlist-info">
                    <h4>@playlist.Name</h4>
                    <p class="playlist-owner">@(playlist.User?.DisplayName ?? "User")</p>
                    <span class="playlist-meta">@playlist.PlaylistSongs?.Count() songs</span>
                </div>
            </a>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="pagination-nav">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@(Model.CurrentPage + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="empty-state">
        <i class="bi bi-collection-play"></i>
        <h3>No playlists yet</h3>
        <p>Create your first playlist now!</p>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-action="Create" class="btn btn-primary">Create Playlist</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Sign In</a>
        }
    </div>
}

<style>
    .playlists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }
    
    .playlist-card {
        display: block;
        text-decoration: none;
        color: var(--ml-text);
        background: var(--ml-surface);
        border-radius: var(--ml-radius-lg);
        overflow: hidden;
        transition: var(--ml-transition);
    }
    
    .playlist-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--ml-shadow-lg);
        background: var(--ml-surface-hover);
    }
    
    .playlist-cover {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
    }
    
    .playlist-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .playlist-card:hover .playlist-cover img {
        transform: scale(1.05);
    }
    
    .playlist-cover-default {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--ml-gradient-primary);
        font-size: 4rem;
        color: rgba(255, 255, 255, 0.5);
    }
    
    .playlist-badge {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 0.75rem;
    }
    
    .playlist-badge.private {
        background: var(--ml-surface);
        color: var(--ml-text-muted);
    }
    
    .playlist-info {
        padding: 16px;
    }
    
    .playlist-info h4 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 4px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .playlist-owner {
        font-size: 0.875rem;
        color: var(--ml-text-muted);
        margin-bottom: 8px;
    }
    
    .playlist-meta {
        font-size: 0.75rem;
        color: var(--ml-text-dark);
    }
</style>
