@model ArtistsViewModel
@{
    ViewData["Title"] = "Artists";
}

<div class="page-header-customer">
    <div>
        <h1>
            @if (!string.IsNullOrEmpty(Model.Search))
            {
                <span>Artists: "@Model.Search"</span>
            }
            else
            {
                <span>All Artists</span>
            }
        </h1>
        <p class="text-muted">@Model.TotalItems artists</p>
    </div>
</div>

<!-- Filters -->
<div class="filters-bar">
    <form method="get" class="filters-form">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" name="search" value="@Model.Search" placeholder="Search artists..." class="form-control" />
        </div>
        
        <select name="sort" class="form-select" onchange="this.form.submit()">
            <option value="popular" selected="@(Model.Sort == "popular")">Most Popular</option>
            <option value="newest" selected="@(Model.Sort == "newest")">Newest</option>
            <option value="name" selected="@(Model.Sort == "name")">By Name</option>
            <option value="songs" selected="@(Model.Sort == "songs")">Most Songs</option>
        </select>
        
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i>
        </button>
        
        @if (!string.IsNullOrEmpty(Model.Search))
        {
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-lg"></i> Clear Filter
            </a>
        }
    </form>
</div>

<!-- Artists Grid -->
@if (Model.Artists.Any())
{
    <div class="artists-grid-page">
        @foreach (var artist in Model.Artists)
        {
            <a asp-action="Details" asp-route-id="@artist.Id" class="artist-card-large">
                <div class="artist-avatar-wrap">
                    <img src="@(artist.ImageUrl ?? "/uploads/artists/default-artist.jpg")" alt="@artist.Name" loading="lazy" />
                    @if (artist.IsVerified)
                    {
                        <span class="verified-badge-lg" title="Verified Artist">
                            <i class="bi bi-patch-check-fill"></i>
                        </span>
                    }
                </div>
                <h4>@artist.Name</h4>
                <p>@artist.Songs?.Count() songs</p>
            </a>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="pagination-nav">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-sort="@Model.Sort" asp-route-page="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-sort="@Model.Sort" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-sort="@Model.Sort" asp-route-page="@(Model.CurrentPage + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="empty-state">
        <i class="bi bi-person"></i>
        <h3>No artists found</h3>
        <p>Try changing your search keywords</p>
        <a asp-action="Index" class="btn btn-primary">View All</a>
    </div>
}

<style>
    .artists-grid-page {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }
    
    .artist-card-large {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        text-decoration: none;
        color: var(--ml-text);
        padding: 24px 16px;
        border-radius: var(--ml-radius-lg);
        transition: var(--ml-transition);
    }
    
    .artist-card-large:hover {
        background: var(--ml-surface);
    }
    
    .artist-avatar-wrap {
        position: relative;
        width: 150px;
        height: 150px;
        margin-bottom: 16px;
    }
    
    .artist-avatar-wrap img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: var(--ml-shadow);
        transition: var(--ml-transition);
    }
    
    .artist-card-large:hover .artist-avatar-wrap img {
        transform: scale(1.05);
        box-shadow: var(--ml-shadow-lg);
    }
    
    .verified-badge-lg {
        position: absolute;
        bottom: 8px;
        right: 8px;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--ml-bg);
        border-radius: 50%;
        color: var(--ml-info);
        font-size: 1.125rem;
    }
    
    .artist-card-large h4 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 4px;
    }
    
    .artist-card-large p {
        font-size: 0.875rem;
        color: var(--ml-text-muted);
        margin: 0;
    }
</style>
