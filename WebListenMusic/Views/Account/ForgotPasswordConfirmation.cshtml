@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicListen</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    
    <style>
        .auth-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--ml-gradient-bg);
            padding: 20px;
        }
        
        .auth-container {
            width: 100%;
            max-width: 420px;
        }
        
        .auth-card {
            background: var(--ml-surface);
            border: 1px solid var(--ml-border);
            border-radius: var(--ml-radius-xl);
            padding: 40px;
            box-shadow: var(--ml-shadow-lg);
            text-align: center;
        }
        
        .auth-logo {
            margin-bottom: 32px;
        }
        
        .auth-logo a {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--ml-text);
            text-decoration: none;
        }
        
        .auth-logo i {
            font-size: 2rem;
            color: var(--ml-primary);
        }
        
        .email-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--ml-primary) 0%, #3b82f6 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
        }
        
        .email-icon i {
            font-size: 2.5rem;
            color: white;
        }
        
        .auth-title {
            margin-bottom: 8px;
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--ml-text);
        }
        
        .auth-subtitle {
            color: var(--ml-text-muted);
            margin-bottom: 24px;
            line-height: 1.6;
        }
        
        .info-box {
            background: var(--ml-bg);
            border: 1px solid var(--ml-border);
            border-radius: var(--ml-radius);
            padding: 16px;
            margin-bottom: 24px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            text-align: left;
        }
        
        .info-box i {
            font-size: 1.25rem;
            color: var(--ml-primary);
            flex-shrink: 0;
            margin-top: 2px;
        }
        
        .info-box p {
            font-size: 0.875rem;
            color: var(--ml-text-muted);
            margin: 0;
            line-height: 1.5;
        }
        
        .info-box strong {
            color: var(--ml-danger);
        }
        
        .dev-notice {
            background: rgba(251, 191, 36, 0.1);
            border: 1px solid rgba(251, 191, 36, 0.3);
            border-radius: var(--ml-radius);
            padding: 16px;
            margin-bottom: 24px;
            text-align: left;
        }
        
        .dev-notice-title {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            color: #fbbf24;
            margin-bottom: 8px;
        }
        
        .dev-notice-text {
            font-size: 0.75rem;
            color: var(--ml-text-muted);
            margin-bottom: 8px;
        }
        
        .dev-notice-link {
            font-size: 0.7rem;
            color: var(--ml-primary);
            word-break: break-all;
            background: var(--ml-bg);
            padding: 10px 12px;
            border-radius: var(--ml-radius);
            border: 1px solid var(--ml-border);
            display: block;
            text-decoration: none;
        }
        
        .dev-notice-link:hover {
            background: var(--ml-surface-hover);
        }
        
        .btn-auth {
            width: 100%;
            height: 48px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: var(--ml-radius);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .auth-footer {
            text-align: center;
            margin-top: 24px;
            color: var(--ml-text-muted);
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-logo">
                    <a href="/">
                        <i class="bi bi-music_note_beamed"></i>
                        <span>MusicListen</span>
                    </a>
                </div>
                
                <div class="email-icon">
                    <i class="bi bi-envelope-check"></i>
                </div>
                
                <h1 class="auth-title">Check Your Email</h1>
                <p class="auth-subtitle">
                    If an account exists with that email address, we've sent password reset instructions.
                </p>
                
                <div class="info-box">
                    <i class="bi bi-info-circle"></i>
                    <p>Please check your inbox and spam folder. The reset link will expire in <strong>24 hours</strong>.</p>
                </div>
                
                @if (TempData["ResetLink"] != null)
                {
                    <div class="dev-notice">
                        <div class="dev-notice-title">
                            <i class="bi bi-code-slash"></i>
                            Development Mode
                        </div>
                        <p class="dev-notice-text">In production, this link would be sent via email:</p>
                        <a href="@TempData["ResetLink"]" class="dev-notice-link">
                            @TempData["ResetLink"]
                        </a>
                    </div>
                }
                
                <a asp-action="Login" class="btn btn-primary btn-auth">
                    <i class="bi bi-arrow-left"></i>
                    Back to Sign In
                </a>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="text-muted small">
                    <i class="bi bi-house me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</body>
</html>
