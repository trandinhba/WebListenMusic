@model RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicListen</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    
    <style>
        .auth-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--ml-gradient-bg);
            padding: 20px;
        }
        
        .auth-container {
            width: 100%;
            max-width: 420px;
        }
        
        .auth-card {
            background: var(--ml-surface);
            border: 1px solid var(--ml-border);
            border-radius: var(--ml-radius-xl);
            padding: 40px;
            box-shadow: var(--ml-shadow-lg);
        }
        
        .auth-logo {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .auth-logo a {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--ml-text);
            text-decoration: none;
        }
        
        .auth-logo i {
            font-size: 2rem;
            color: var(--ml-primary);
        }
        
        .auth-title {
            text-align: center;
            margin-bottom: 8px;
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        .auth-subtitle {
            text-align: center;
            color: var(--ml-text-muted);
            margin-bottom: 32px;
        }
        
        .form-floating {
            margin-bottom: 16px;
        }
        
        .form-floating > .form-control {
            background: var(--ml-bg);
            border: 1px solid var(--ml-border);
            color: var(--ml-text);
            height: 56px;
        }
        
        .form-floating > .form-control:focus {
            background: var(--ml-bg);
            border-color: var(--ml-primary);
            box-shadow: 0 0 0 3px rgba(31, 111, 235, 0.15);
            color: var(--ml-text);
        }
        
        .form-floating > label {
            color: var(--ml-text-muted);
        }
        
        .form-check {
            margin-bottom: 24px;
        }
        
        .form-check-input {
            background-color: var(--ml-bg);
            border-color: var(--ml-border);
        }
        
        .form-check-input:checked {
            background-color: var(--ml-primary);
            border-color: var(--ml-primary);
        }
        
        .form-check-label {
            color: var(--ml-text-muted);
        }
        
        .btn-auth {
            width: 100%;
            height: 48px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: var(--ml-radius);
        }
        
        .auth-divider {
            display: flex;
            align-items: center;
            margin: 24px 0;
            color: var(--ml-text-muted);
        }
        
        .auth-divider::before,
        .auth-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--ml-border);
        }
        
        .auth-divider span {
            padding: 0 16px;
            font-size: 0.875rem;
        }
        
        .auth-footer {
            text-align: center;
            margin-top: 24px;
            color: var(--ml-text-muted);
        }
        
        .auth-footer a {
            color: var(--ml-primary);
            font-weight: 500;
        }
        
        .auth-footer a:hover {
            text-decoration: underline;
        }
        
        .alert {
            border-radius: var(--ml-radius);
            border: none;
        }
        
        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--ml-text-muted);
            cursor: pointer;
            z-index: 10;
        }
        
        .password-toggle:hover {
            color: var(--ml-text);
        }
        
        .form-floating-password {
            position: relative;
        }
        
        .form-floating-password .form-control {
            padding-right: 48px;
        }
        
        .password-strength {
            height: 4px;
            background: var(--ml-border);
            border-radius: 2px;
            margin-top: 8px;
            overflow: hidden;
        }
        
        .password-strength-bar {
            height: 100%;
            width: 0;
            transition: width 0.3s, background 0.3s;
        }
        
        .password-requirements {
            font-size: 0.75rem;
            color: var(--ml-text-muted);
            margin-top: 8px;
        }
        
        .requirement {
            display: flex;
            align-items: center;
            gap: 6px;
            margin-bottom: 4px;
        }
        
        .requirement i {
            font-size: 0.625rem;
        }
        
        .requirement.valid {
            color: var(--ml-success);
        }
        
        .requirement.valid i::before {
            content: "\F26B"; /* bi-check-circle-fill */
        }
        
        .field-validation-error {
            color: var(--ml-danger);
            font-size: 0.75rem;
            margin-top: 4px;
        }
    </style>
</head>
<body>
    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-logo">
                    <a href="/">
                        <i class="bi bi-music-note-beamed"></i>
                        <span>MusicListen</span>
                    </a>
                </div>
                
                <h1 class="auth-title">Create Account</h1>
                <p class="auth-subtitle">Sign up to explore the world of music!</p>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                
                <form asp-action="Register" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    
                    <div class="form-floating">
                        <input asp-for="DisplayName" type="text" class="form-control" id="displayName" placeholder="Display name" autofocus />
                        <label for="displayName"><i class="bi bi-person me-2"></i>Display Name</label>
                        <span asp-validation-for="DisplayName" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="name@example.com" />
                        <label for="email"><i class="bi bi-envelope me-2"></i>Email</label>
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-floating form-floating-password">
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" onkeyup="checkPasswordStrength(this.value)" />
                        <label for="password"><i class="bi bi-lock me-2"></i>Password</label>
                        <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    
                    <div class="password-strength">
                        <div class="password-strength-bar" id="strengthBar"></div>
                    </div>
                    
                    <div class="password-requirements">
                        <div class="requirement" id="reqLength">
                            <i class="bi bi-circle"></i>
                            <span>At least 6 characters</span>
                        </div>
                        <div class="requirement" id="reqLower">
                            <i class="bi bi-circle"></i>
                            <span>Contains lowercase letter</span>
                        </div>
                        <div class="requirement" id="reqDigit">
                            <i class="bi bi-circle"></i>
                            <span>Contains digit</span>
                        </div>
                    </div>
                    
                    <div class="form-floating form-floating-password mt-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm password" />
                        <label for="confirmPassword"><i class="bi bi-lock-fill me-2"></i>Confirm Password</label>
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                        <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-check mt-3">
                        <input type="checkbox" class="form-check-input" id="agreeTerms" required />
                        <label class="form-check-label" for="agreeTerms">
                            I agree to the <a href="#" class="text-primary">Terms of Service</a> and <a href="#" class="text-primary">Privacy Policy</a>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-auth">
                        <i class="bi bi-person-plus me-2"></i>Sign Up
                    </button>
                </form>
                
                <div class="auth-footer">
                    Already have an account? <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">Sign In</a>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="text-muted small">
                    <i class="bi bi-arrow-left me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
    
    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }
        
        function checkPasswordStrength(password) {
            const strengthBar = document.getElementById('strengthBar');
            const reqLength = document.getElementById('reqLength');
            const reqLower = document.getElementById('reqLower');
            const reqDigit = document.getElementById('reqDigit');
            
            let strength = 0;
            
            // Check length
            if (password.length >= 6) {
                strength += 33;
                reqLength.classList.add('valid');
            } else {
                reqLength.classList.remove('valid');
            }
            
            // Check lowercase
            if (/[a-z]/.test(password)) {
                strength += 33;
                reqLower.classList.add('valid');
            } else {
                reqLower.classList.remove('valid');
            }
            
            // Check digit
            if (/\d/.test(password)) {
                strength += 34;
                reqDigit.classList.add('valid');
            } else {
                reqDigit.classList.remove('valid');
            }
            
            strengthBar.style.width = strength + '%';
            
            if (strength < 34) {
                strengthBar.style.background = 'var(--ml-danger)';
            } else if (strength < 67) {
                strengthBar.style.background = 'var(--ml-warning)';
            } else {
                strengthBar.style.background = 'var(--ml-success)';
            }
        }
    </script>
</body>
</html>
