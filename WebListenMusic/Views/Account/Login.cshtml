@model LoginViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicListen</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    
    <style>
        .auth-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--ml-gradient-bg);
            padding: 20px;
        }
        
        .auth-container {
            width: 100%;
            max-width: 420px;
        }
        
        .auth-card {
            background: var(--ml-surface);
            border: 1px solid var(--ml-border);
            border-radius: var(--ml-radius-xl);
            padding: 40px;
            box-shadow: var(--ml-shadow-lg);
        }
        
        .auth-logo {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .auth-logo a {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--ml-text);
            text-decoration: none;
        }
        
        .auth-logo i {
            font-size: 2rem;
            color: var(--ml-primary);
        }
        
        .auth-title {
            text-align: center;
            margin-bottom: 8px;
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        .auth-subtitle {
            text-align: center;
            color: var(--ml-text-muted);
            margin-bottom: 32px;
        }
        
        .form-floating {
            margin-bottom: 16px;
        }
        
        .form-floating > .form-control {
            background: var(--ml-bg);
            border: 1px solid var(--ml-border);
            color: var(--ml-text);
            height: 56px;
        }
        
        .form-floating > .form-control:focus {
            background: var(--ml-bg);
            border-color: var(--ml-primary);
            box-shadow: 0 0 0 3px rgba(31, 111, 235, 0.15);
            color: var(--ml-text);
        }
        
        .form-floating > label {
            color: var(--ml-text-muted);
        }
        
        .form-check {
            margin-bottom: 24px;
        }
        
        .form-check-input {
            background-color: var(--ml-bg);
            border-color: var(--ml-border);
        }
        
        .form-check-input:checked {
            background-color: var(--ml-primary);
            border-color: var(--ml-primary);
        }
        
        .form-check-label {
            color: var(--ml-text-muted);
        }
        
        .btn-auth {
            width: 100%;
            height: 48px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: var(--ml-radius);
        }
        
        .auth-divider {
            display: flex;
            align-items: center;
            margin: 24px 0;
            color: var(--ml-text-muted);
        }
        
        .auth-divider::before,
        .auth-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--ml-border);
        }
        
        .auth-divider span {
            padding: 0 16px;
            font-size: 0.875rem;
        }
        
        .auth-footer {
            text-align: center;
            margin-top: 24px;
            color: var(--ml-text-muted);
        }
        
        .auth-footer a {
            color: var(--ml-primary);
            font-weight: 500;
        }
        
        .auth-footer a:hover {
            text-decoration: underline;
        }
        
        .alert {
            border-radius: var(--ml-radius);
            border: none;
        }
        
        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--ml-text-muted);
            cursor: pointer;
            z-index: 10;
        }
        
        .password-toggle:hover {
            color: var(--ml-text);
        }
        
        .form-floating-password {
            position: relative;
        }
        
        .form-floating-password .form-control {
            padding-right: 48px;
        }
    </style>
</head>
<body>
    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-logo">
                    <a href="/">
                        <i class="bi bi-music-note-beamed"></i>
                        <span>MusicListen</span>
                    </a>
                </div>
                
                <h1 class="auth-title">Sign In</h1>
                <p class="auth-subtitle">Welcome back! Sign in to continue.</p>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="name@example.com" autofocus />
                        <label for="email"><i class="bi bi-envelope me-2"></i>Email</label>
                    </div>
                    
                    <div class="form-floating form-floating-password">
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" />
                        <label for="password"><i class="bi bi-lock me-2"></i>Password</label>
                        <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check mb-0">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                        <a href="#" class="text-primary small">Forgot password?</a>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-auth">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </button>
                </form>
                
                <div class="auth-footer">
                    Don't have an account? <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Sign up now</a>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="text-muted small">
                    <i class="bi bi-arrow-left me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
    
    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }
    </script>
</body>
</html>
