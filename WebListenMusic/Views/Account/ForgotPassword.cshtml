@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicListen</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    
    <style>
        .auth-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--ml-gradient-bg);
            padding: 20px;
        }
        
        .auth-container {
            width: 100%;
            max-width: 420px;
        }
        
        .auth-card {
            background: var(--ml-surface);
            border: 1px solid var(--ml-border);
            border-radius: var(--ml-radius-xl);
            padding: 40px;
            box-shadow: var(--ml-shadow-lg);
        }
        
        .auth-logo {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .auth-logo a {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--ml-text);
            text-decoration: none;
        }
        
        .auth-logo i {
            font-size: 2rem;
            color: var(--ml-primary);
        }
        
        .auth-icon {
            text-align: center;
            margin-bottom: 24px;
        }
        
        .auth-icon i {
            font-size: 4rem;
            color: var(--ml-primary);
        }
        
        .auth-title {
            text-align: center;
            margin-bottom: 8px;
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        .auth-subtitle {
            text-align: center;
            color: var(--ml-text-muted);
            margin-bottom: 32px;
        }
        
        .form-floating {
            margin-bottom: 24px;
        }
        
        .form-floating > .form-control {
            background: var(--ml-bg);
            border: 1px solid var(--ml-border);
            color: var(--ml-text);
            height: 56px;
        }
        
        .form-floating > .form-control:focus {
            background: var(--ml-bg);
            border-color: var(--ml-primary);
            box-shadow: 0 0 0 3px rgba(31, 111, 235, 0.15);
            color: var(--ml-text);
        }
        
        .form-floating > label {
            color: var(--ml-text-muted);
        }
        
        .btn-auth {
            width: 100%;
            height: 48px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: var(--ml-radius);
        }
        
        .auth-footer {
            text-align: center;
            margin-top: 24px;
            color: var(--ml-text-muted);
        }
        
        .auth-footer a {
            color: var(--ml-primary);
            font-weight: 500;
        }
        
        .auth-footer a:hover {
            text-decoration: underline;
        }
        
        .alert {
            border-radius: var(--ml-radius);
            border: none;
        }
    </style>
</head>
<body>
    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-logo">
                    <a href="/">
                        <i class="bi bi-music-note-beamed"></i>
                        <span>MusicListen</span>
                    </a>
                </div>
                
                <div class="auth-icon">
                    <i class="bi bi-key"></i>
                </div>
                
                <h1 class="auth-title">Forgot Password?</h1>
                <p class="auth-subtitle">No worries! Enter your email and we'll send you reset instructions.</p>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                
                <form asp-action="ForgotPassword" method="post">
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="name@example.com" autofocus />
                        <label for="email"><i class="bi bi-envelope me-2"></i>Email</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-auth">
                        <i class="bi bi-send me-2"></i>Send Reset Link
                    </button>
                </form>
                
                <div class="auth-footer">
                    <a asp-action="Login"><i class="bi bi-arrow-left me-1"></i>Back to Sign In</a>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="text-muted small">
                    <i class="bi bi-arrow-left me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</body>
</html>
